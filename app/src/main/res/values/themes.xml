<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SchoolOS" parent="android:Theme.Material.Light.NoActionBar" >
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/primary_color_dark</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textColorSecondary">@color/primary_color</item>
        <item name="android:textColorTertiary">@color/primary_color</item>
        <item name="android:panelColorBackground">@color/primary_color</item>
        <item name="android:panelBackground">@color/primary_color</item>
        <item name="android:panelColorForeground">@color/primary_color</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.OnboardTheme" parent="Theme.SchoolOS">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/primary_color</item>
        <item name="android:background">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@color/primary_color_dark</item>
        <item name="android:statusBarColor">@color/primary_color_dark</item>
    </style>
</resources>