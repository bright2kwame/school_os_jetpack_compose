<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.SchoolOS"
        tools:targetApi="31">

        <activity
            android:name=".ui.pages.RegisterOrLoginPage"
            android:exported="false"
            android:label="@string/title_activity_register_or_login_page"
            android:theme="@style/Theme.OnboardTheme" />
        <activity
            android:name=".ui.pages.OnboardPage"
            android:exported="true"
            android:label="@string/welcome_title"
            android:theme="@style/Theme.OnboardTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>